
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<div class="container mt-4">
    <h2 class="fw-bold text-primary mb-4">Manager Dashboard</h2>

    <div class="row text-center g-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 bg-light">
                <div class="card-body">
                    <h5>Total Employees</h5>
                    <h2 class="text-success fw-bold">@ViewBag.TotalEmployees</h2>
                    <a href="@Url.Action("AddEmployee")" class="btn btn-outline-primary mt-3 w-100">Manage Employees</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm border-0 bg-light">
                <div class="card-body">
                    <h5>Total Customers</h5>
                    <h2 class="text-info fw-bold">@ViewBag.TotalCustomers</h2>
                    <a href="@Url.Action("ManageCustomers")" class="btn btn-outline-info mt-3 w-100">Manage Customers</a>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <a href="@Url.Action("ViewTransactions")" class="btn btn-secondary px-4">View Transactions</a>
    </div>
</div>

