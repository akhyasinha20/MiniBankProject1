@model IEnumerable<MiniBank.Models.UserRegister>
@{
    ViewBag.Title = "AddEmployee";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<h2 class="text-primary mb-4">Manage Employees</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-hover align-middle">
    <thead class="table-primary">
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.UserId</td>
                <td>@emp.Username</td>
                <td>@emp.Email</td>
                <td>
                    @if (emp.IsActive == true)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Pending</span>
                    }
                </td>
                <td>
                    @if (emp.IsActive != true)
                    {
                        using (Html.BeginForm("Approve", "Manager", FormMethod.Post, new System.Collections.Generic.Dictionary<string, object> { { "class", "d-inline" } }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("id", emp.UserId)
                            <button type="submit" class="btn btn-sm btn-success">Approve</button>
                        }
                    }

                    @using (Html.BeginForm("Remove", "Manager", FormMethod.Post, new System.Collections.Generic.Dictionary<string, object>
                        { { "class", "d-inline ml-2" } }))
                        {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("id", emp.UserId)
                        <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                        }
                </td>
            </tr>
        }
    </tbody>
</table>