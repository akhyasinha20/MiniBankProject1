
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-warning text-dark text-center">
            <h3 class="mb-0">🔒 Reset Password</h3>
        </div>

        <div class="card-body p-4">
            <form method="post" class="row g-3">
                <div class="col-md-6 offset-md-3">
                    <label for="customerId" class="form-label fw-semibold">Customer Name</label>
                    <input type="text" id="customerId" name="customerId" class="form-control" required placeholder="Enter your Customer ID" />
                </div>

                <div class="col-md-6 offset-md-3">
                    <label for="oldPassword" class="form-label fw-semibold">Old Password</label>
                    <input type="password" id="oldPassword" name="oldPassword" class="form-control" required placeholder="Enter old password" />
                </div>

                <div class="col-md-6 offset-md-3">
                    <label for="newPassword" class="form-label fw-semibold">New Password</label>
                    <input type="password" id="newPassword" name="newPassword" class="form-control" required placeholder="Enter new password" />
                </div>

                <div class="col-12 text-center mt-4">
                    <button type="submit" class="btn btn-warning text-dark fw-bold px-5">Reset Password</button>
                </div>
            </form>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info mt-4 text-center fw-semibold">
                    @ViewBag.Message
                </div>
            }
        </div>
    </div>
</div>
